<%- include('../partials/header') %>

<div class="container mt-4">
    <h1 class="mb-4"><%= article.title %></h1>
    <h6 class="text-muted mb-3"><%= article.createdAt.toDateString() %></h6>
    <p><%= article.description %></p>
    <p><%= article.markdown %></p>
    <div class="mb-4">
        <a href="/articles/edit/<%= article._id %>" class="btn btn-secondary">Edit</a>
        <form action="/articles/<%= article._id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a href="/articles" class="btn btn-primary">Back to Articles</a>
    </div>
</div>

<%- include('../partials/footer') %>
