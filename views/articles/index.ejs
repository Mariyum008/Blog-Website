<%- include('../partials/header') %>

<div class="container mt-4">
    <h1 class="mb-4">Articles</h1>
    <div class="row">
        <% articles.forEach(article => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= article.description %></p>
                        <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <a href="/articles/edit/<%= article._id %>" class="btn btn-secondary">Edit</a>
                        <form action="/articles/<%= article._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>
